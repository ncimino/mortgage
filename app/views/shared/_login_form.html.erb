<%= form_for("user", :url => user_session_path) do |f| %>
    <p>
        <%= f.label :login, "Login / Email" %><br/>
        <%= f.text_field :login, :class => "text focus" %>
    </p>

    <p>
        <%= f.label :password %><br/>
        <%= f.password_field :password, :class => "text" %>
    </p>

    <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </p>

    <p><button type="submit" class="button" title="Sign in">Sign in</button></p>
<% end %>
