<div id="new-payment-form" title="Add a new payment">
  <% if @loan and @payment %>
  <%= form_for [@loan, @payment] do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      <div class="field">
        <%= f.label :amount %>
        <br/>
        <%= f.text_field :amount, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :interest %>
        <br/>
        <%= f.text_field :interest, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :escrow %>
        <br/>
        <%= f.text_field :escrow, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :date %>
        <br/>
        <%= f.text_field :date, :class => "text" %>
      </div>
      <%# f.submit %>
  <% end %>
  <% end %>
</div>
<%= debug(params) if Rails.env.development? %>