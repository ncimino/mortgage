<div id="new-payment-form" title="Add a new payment">
  <%= form_for [@loan, @payment], :url => {:controller => "payments", :action => "create", :loan_id => @loan.id}, :method => :post, :remote => true do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="field">
        <%= f.label :amount %>
        <br/>
        <%= f.text_field :amount, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :interest %>
        <br/>
        <%= f.text_field :interest, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :escrow %>
        <br/>
        <%= f.text_field :escrow, :class => "text" %>
      </div>
      <div class="field">
        <%= f.label :date %>
        <br/>
        <%= f.text_field :date, :class => "text" %>
      </div>
      <%# f.submit %>
  <% end %>
</div>
